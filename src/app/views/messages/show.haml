%h2 Overview
%h3= @message.status_message
%form{method: 'post'}
  %input{type: 'hidden', name: '_method', value: 'PUT'}
  %label.inline-block
    Subject
    %input{name: 'message_subject', value: @message.message_subject}
  %label.inline-block
    Template Plugin
    %select{name: 'template_plugin'}
      %option{value: 'nil'} -
      - @plugins.each do |plugin|
        %option{value: plugin.package, selected: ('selected' if @message.template_plugin == plugin.package)}= plugin.name
  %label.inline-block
    Template Name
    %input{name: 'template_name', value: @message.template_name}
  %button Save